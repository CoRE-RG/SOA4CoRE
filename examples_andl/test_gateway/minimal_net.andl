types std {
	ethernetLink ETH_100MBIT {
		bandwidth 100 Mb/s;
		length 5m;
	}
}

settings {
	rootPackage "soqosmw.simulations";
}

network minimal_net {
	devices { 
		node Scheinwerfer {
			position (69,29);
		}
		node Lichtregulierung {
			position (362,29);
		}
		node InfotainmentSystem {
			position (207,70);
		}	
		
		canLink Licht {
			position (69,109);
		}
		canLink Steuerung {
			position (362,109);
		}
		
		gateway GatewayLicht { 
			position (69,184);
		}
		gateway GatewaySteuerung { 
			position (362,184);
		}
		switch ethswitch {
			position (207,184);
		}		
	}
	
	connections {
		segment backbone {
			GatewayLicht <--> { new std.ETH_100MBIT } <--> ethswitch;
			GatewaySteuerung <--> { new std.ETH_100MBIT } <--> ethswitch;
			InfotainmentSystem <--> { new std.ETH_100MBIT } <--> ethswitch;
		}
		
		segment canbus { 
			GatewayLicht <--> Licht;
			GatewaySteuerung <--> Steuerung;
			Scheinwerfer <--> Licht;
			Lichtregulierung <--> Steuerung;
		}
	}
	
	communication {
		message scheinwerfermsg {
			sender Scheinwerfer;
			period 1ms;
			payload 8B;
			receivers Lichtregulierung;
			mapping {
				canbus : can { id 3; };
				GatewayLicht;
				backbone : be;
				GatewaySteuerung;
			}
		}
		
		service scheinwerferservice {
			publisher GatewayLicht;
			subscriber {
				RT GatewaySteuerung;
				UDP InfotainmentSystem;
			}
			canIds 3;
		}
	}
}